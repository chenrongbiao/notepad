    // 要在配置时传递给 CMake 的参数
    "cmake.configureArgs": [
        // 为 CMake 指定生成器后使用的构建程序，来源于 CMake 组件
        "-DCMAKE_MAKE_PROGRAM='C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\CMake\\Ninja\\ninja.exe'",
        // 为 CMake 指定查找 MSVC 构建支持的 Qt 库路径
